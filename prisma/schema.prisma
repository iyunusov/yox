generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String    @id
  phoneNumber String    @unique
  products    Product[]
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  image       String @unique
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
